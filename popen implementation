#include <stdio.h>
#include <string.h>
#include <stdlib.h>

FILE* fin;

int main()

{
  char buffer[10000];
  char word[100];
  char user[100];
	char str[150];
	int YesNo;
	int woo = 0;
	
  printf("Enter your search term: ");
	scanf("%s", user);
	printf("If this is a character in the play press '1' otherwise press '0': ");
	scanf("%d", &YesNo);
       
  /* two stream pointers-one to the reading side and one to the writing
 	  side */
  FILE *inPipe;
  FILE *outPipe;
  char buff[100];
	int numWords;
	int i;

	/* if its a character in the play, set to uppercase */
	if (YesNo)
	{
	for(i = 0; user[i]!='\0'; i++)
	  {
	    if (user[i] >= 'a' && user[i] <= 'z')
	      {
		user[i] = user[i]-32;
	      }
	  }
        
	}
	/* reading a file to the stream */
   inPipe = popen("cat shakespeare.txt", "r");
   if (inPipe == NULL)
        {
         perror("popen");
         exit(1);
        }
	/* concatenating string to incorporate user's search term */
	strcpy(str, "grep -o ");
	strcat(str, user);
	strcat(str, " shakespeare.txt|wc -l");

	/* writing from the stream (collecting all words that match search term
	 and finding number of terms */
   outPipe = popen(str, "w");
   if (outPipe == NULL)
        {
           perror("popen");
           exit(1);
        }

    /* Processing loop */
    while(fgets(buff, 100, inPipe))
		{
      fputs(buff, outPipe);
		}

       

	/* Close the pipes */
  pclose(inPipe);
  pclose(outPipe);
